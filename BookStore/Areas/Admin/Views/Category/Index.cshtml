@model List<Category>
<partial name="_Notification" />

<div class="container">
    <div class="row pt-4">
        <div class="col-12">
            <div class="card shadow border-0">
                <div class="card-header bg-secondary bg-gradient m-lg-0 py-4">
                    <h2 class="card-title text-white  mb-0">Category List</h2>
                </div>
                <div class="card-body">
                    <div class="text-end">
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Create new Category
                        </a>
                    </div>
                    <table class="table table-bordered table-striped table-hover mt-4">
                        <thead>
                            <tr>
                                <th scope="col">Category Name</th>
                                <th scope="col">Display Order</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
                            {
                                <tr>
                                    <td>@obj.Name</td>
                                    <td>@obj.DisplayOrder</td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-controller="Category" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                                <i class="bi bi-pencil-square"></i> Edit
                                            </a>
                                            <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                                <i class="bi bi-trash"></i> Delete
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        border-radius: 15px;
        box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-bottom: none;
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: bold;
    }

    .table > thead > tr > th {
        background-color: #f5f5f5;
    }
</style>
